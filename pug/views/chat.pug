extends layouts/index.pug

block vista
    style.
        .table td, .table th {
            vertical-align: middle;
        }
        h1 {
            color: blue;
        }
        hr {
            background-color: #ddd;
        }
        .jumbotron {
            min-height: 100vh;
        }
    
    div(class="jumbotron")
        h1='Mensajes'
        br
        if hayMensajes
            div(class="table-responsive")
                table(class="table table-dark")
                    tr
                        th='Nombre'
                        th='Mensaje'
                        th='Fecha'
                        each mensaje in mensajes
                            tr
                                td=mensaje.name
                                td=mensaje.message
                                td=mensaje.date
        else
            h3(class="alert alert-warning")='No se encontraron mensajes'
            